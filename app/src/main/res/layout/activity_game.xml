<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Фон игрового поля -->

    <!-- Игровое поле -->
    <ImageView
        android:id="@+id/game_board_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background_image2" />

    <ImageView
        android:id="@+id/gameboard_image"
        android:layout_width="375dp"
        android:layout_height="375dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="200dp"
        android:layout_marginEnd="20dp"
        android:src="@drawable/gameboard_image" />


    <ImageButton
        android:id="@+id/return_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="630dp"
        android:scaleType="centerInside"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:src="@drawable/return_button_image" />
</RelativeLayout>